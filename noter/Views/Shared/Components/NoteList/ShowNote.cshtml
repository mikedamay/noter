@model System.Collections.Generic.IEnumerable<noter.Entities.Note>

<table class="table">
    <thead>
    <tr>
        <th>
            @Html.DisplayNameFor(model => model.Payload)
        </th>
        <th></th>
    </tr>
    </thead>
    <tbody>
    @foreach (var item in Model) {
        <tr>
            <td>
                @Html.DisplayFor(modelItem => item.Payload)
            </td>
            <td>
                <a class="btn btn-primary" asp-action="Edit" asp-controller="NoteManager" asp-route-id="@item.Id">Edit</a> |
                <a class="btn" asp-action="Details" asp-controller="NoteManager" asp-route-id="@item.Id">Details</a> |
                <a class="btn" asp-action="Delete" asp-controller="NoteManager" asp-route-id="@item.Id">Delete</a>
                <a class="btn" asp-action="AddComment" asp-controller="NoteManager" asp-route-id="@item.Id">Add Comment</a>
            </td>
        </tr>
    }
    </tbody>
</table>
