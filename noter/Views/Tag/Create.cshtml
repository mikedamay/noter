@model noter.Entities.Tag

@{
    ViewBag.Title = "title";
    Layout = "_MainLayout";
}

<h2>@ViewBag.Title</h2>

<div class="col-md-4">
    <form asp-action="Create">
        <div asp-validation-summary="ModelOnly" class="text-danger"></div>
        <div class="form-group">
            <label asp-for="Name" class="control-label"></label>
            <input asp-for="Name" class="form-control"></input>
            <span asp-validation-for="Name" class="text-danger"></span>
        </div>
        <div class="form-group">
            <label asp-for="ShortDescription" class="control-label"></label>
            <input asp-for="ShortDescription" class="form-control"></input>
            <span asp-validation-for="ShortDescription" class="text-danger"></span>
        </div>
        <div class="form-group">
            <label asp-for="Details" class="control-label"></label>
            <input asp-for="Details" class="form-control"></input>
            <span asp-validation-for="Details" class="text-danger"></span>
        </div>
        <div class="form-group">
            <input type="submit" name="Create" class="btn btn-default"/>
        </div>
    </form>
</div>
