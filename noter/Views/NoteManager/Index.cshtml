@model IEnumerable<noter.Entities.Note>

@{
    Layout = null;
    var mod = Model.ToList();
}

<!DOCTYPE html>

<html>
<head>
    <meta name="viewport" content="width=device-width" />
    <title>Index</title>
    <link rel="stylesheet" href="/lib/bootstrap/dist/css/bootstrap.css"/>
    <link rel="stylesheet" href="/lib/bootstrap/dist/css/bootstrap-theme.css"></>
</head>
<body>
<p>
    <a class='btn btn-primary' asp-action="Create">Create New</a>
</p>
<table class="table">
    <thead>
        <tr>
                <th>
                    @Html.DisplayNameFor(model => model.Payload)
                </th>
            <th></th>
        </tr>
    </thead>
    <tbody>
@foreach (var item in Model) {
        <tr>
            <td>
                @Html.DisplayFor(modelItem => item.Payload)
            </td>
            <td>
                <a class="btn btn-primary" asp-action="Edit" asp-route-id="@item.Id">Edit</a> |
                <a class="btn" asp-action="Details" asp-route-id="@item.Id">Details</a> |
                <a class="btn" asp-action="Delete" asp-route-id="@item.Id">Delete</a>
                <a class="btn" asp-action="AddComment" asp-route-id="@item.Id">Add Comment</a>
            </td>
        </tr>
}
    </tbody>
</table>
</body>
</html>
